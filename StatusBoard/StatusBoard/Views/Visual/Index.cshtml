@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>OnTime Status Board Visualization</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/TwitterBootstrap")
    <link href="~/Content/VisualizationThemes/Black/style.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="#">Status Board</a>
                <div class="nav-collapse collapse" style="height: 0px;">
                    <ul class="nav">
                        <li class="active"><a href="#defects">Defects</a></li>
                        <li><a href="#features">Features</a></li>
                        <li><a href="#settings">Settings</a></li>
                        <li><a href="#help">Help</a></li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container">
        <h1>Hello world</h1>
        <div class="row-fluid">
            <div class="span4 img-rounded" style="background-color: gray;">Here is some text...</div>
            <div class="span4 img-rounded" style="background-color: gray;">Even more text...</div>
            <div class="span4 img-rounded" style="background-color: gray;">Even more text...</div>
        </div>

        <div id="openDefectCounts"></div>
        <div id="newsTicker">
            <div id="scrollingNewsTicker">
                <ul>
                    <li>Item 1: This is an interesting piece of information to be displaying....</li>
                    <li>Item 2: This is an interesting piece of information to be displaying....</li>
                    <li>Item 3: This is an interesting piece of information to be displaying....</li>
                    <li>Item 4: This is an interesting piece of information to be displaying....</li>
                    <li>Item 5: This is an interesting piece of information to be displaying....</li>
                    <li>Item 6: This is an interesting piece of information to be displaying....</li>
                </ul>
            </div>
        </div>
    </div>
</body>

@Scripts.Render("~/bundles/jquery", "~/bundles/TwitterBootstrap", "~/bundles/Visual")

</html>
